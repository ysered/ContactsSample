<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemTitleTextStyle">
        <item name="android:textColor">@color/colorGray700</item>
        <item name="android:textSize">@dimen/textSize18sp</item>
    </style>

    <style name="ItemSubtitleStyle">
        <item name="android:textColor">@color/colorGray500</item>
        <item name="android:textSize">@dimen/textSize14sp</item>
    </style>

</resources>
